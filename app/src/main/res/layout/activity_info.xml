<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gettysburg.jerry_s_game.InfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rulesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="Rules:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rule1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/rule1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="Don't miss more than 20 balloons."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="10pt"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credits"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creditText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:text="@string/credit8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
